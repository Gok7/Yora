<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/fragment_login_userName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="User Name"
        android:maxLines="1" />


    <EditText
        android:id="@+id/fragment_login_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_login_userName"
        android:hint="Password"
        android:inputType="textPassword"
        android:maxLines="1" />

    <Button
        android:id="@+id/fragment_login_loginButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_login_password"
        android:layout_marginTop="10dp"
        android:background="@color/colorAccent"
        android:text="Log In"
        android:textColor="@android:color/white" />

    <ProgressBar
        android:id="@+id/fragment_login_progress"
        style="?android:attr/progressBarStyleInverse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/fragment_login_loginButton"
        android:layout_alignTop="@id/fragment_login_loginButton"
        android:layout_centerHorizontal="true"
        android:indeterminateOnly="true"
        android:visibility="gone" />


</RelativeLayout>
